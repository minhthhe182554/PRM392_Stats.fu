<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="loginViewModel"
            type="com.hminq.statsfu.presentation.login.LoginViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/dark_grey"
        tools:context=".presentation.login.LoginFragment">

        <TextView
            android:id="@+id/tvWelcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp"
            android:text="@string/login_welcome_title"
            android:fontFamily="@font/projectfont"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="50sp"/>

        <TextView
            android:id="@+id/tvWelcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvWelcomeTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:text="@string/welcome_text"
            android:fontFamily="@font/projectfont"
            android:textColor="@color/grey"
            android:textSize="20sp"/>

        <!-- Flow container -->
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_login_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="btnLoginSpotify, btnLoginAppleMusic"
            app:flow_wrapMode="chain"
            app:flow_verticalAlign="center"
            app:flow_horizontalAlign="center"
            app:flow_verticalGap="15dp"
            app:flow_horizontalGap="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcomeText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.6"/>

        <!-- Button Spotify -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoginSpotify"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/btn_login_spotify"
            android:text="@string/login_with"
            android:textColor="@color/black"
            android:fontFamily="@font/projectfont"
            android:textStyle="bold"
            android:textSize="18sp"
            app:icon="@drawable/ic_spotify"
            app:iconGravity="textEnd"
            app:iconPadding="10dp"
            app:iconSize="45dp"
            app:iconTint="@null"
            android:paddingHorizontal="15dp"
            android:onClick="@{() -> loginViewModel.loginWithSpotify()}"/>

        <!-- Button Apple Music -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoginAppleMusic"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/btn_login_apple_music"
            android:text="@string/login_with"
            android:textColor="@color/red_pink"
            android:fontFamily="@font/projectfont"
            android:textStyle="bold"
            android:textSize="18sp"
            app:icon="@drawable/ic_apple_music"
            app:iconGravity="textEnd"
            app:iconPadding="10dp"
            app:iconSize="45dp"
            app:iconTint="@null"
            android:paddingHorizontal="15dp"
            tools:ignore="MissingConstraints"
            android:onClick="@{() -> loginViewModel.loginWithAppleMusic()}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
